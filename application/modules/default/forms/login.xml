<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <production>
        <login>
            <action></action>
            <method>post</method>
            <elements>
                <email>
                    <type>text</type>
                    <options>
                        <label>Adresse E-mail</label>
                        <required>1</required>
                        <value>test@test.com</value>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>
                        <validators>
                            <email>
                                <options>EmailAddress</options>
                            </email>
                        </validators>
                    </options>
                </email>
                <password>
                    <type>text</type>
                    <options>
                        <label>Mot de passe</label>
                        <value>1234</value>
                        <required>1</required>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>
                        <validators>
                            <alnum>
                                <options>Alnum</options>
                            </alnum>
                        </validators>
                    </options>
                </password>
            
                <submit>
                    <type>submit</type>
                    <options>                                 
                        <value>Valider</value>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>                                       
                    </options>
                </submit>               
            </elements>
            <elementPrefixPath>
                <decorator>
                    <prefix>Form_Decorators</prefix>
                    <path>../application/modules/default/forms/decorators/</path>
                    <type>decorator</type>
                </decorator>
            </elementPrefixPath>
        </login>
    </production>
</zend-config>