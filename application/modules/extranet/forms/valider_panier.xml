<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <production>
        <valider_panier>
            <action></action>
            <method>post</method>
            <elements>
                <id_panier>
                    <type>hidden</type>
                    <options>
                        <label>Identifiant panier</label>
                        <description></description>
                        <required></required>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>
                    </options>
                </id_panier>	
                <message>
                    <type>textarea</type>
                    <options>
                        <label></label>
                        <description></description>
                        <required></required>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>
                    </options>
                </message>
                <submit>
                    <type>submit</type>
                    <options>          
                        <value>Valider</value>
                        <decorators>
                            <decorator>Composite</decorator>
                        </decorators>
                    </options>
                </submit>    
            </elements>
            <elementPrefixPath>
                <decorator>
                    <prefix>Form_Decorators</prefix>
                    <path>../application/modules/default/forms/decorators/</path>
                    <type>decorator</type>
                </decorator>
            </elementPrefixPath>
        </valider_panier>
    </production>
</zend-config>